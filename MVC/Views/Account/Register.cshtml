
@{
    ViewData["Title"] = "Register";
}

@model MVC.ViewModels.RegisterViewModel

<h2>Registration</h2>

<section>
    <div class="container-fluid">
        <form asp-action="Register" method="post" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="text" class="form-control" id="inputEmail" placeholder="InputSurname">
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="text" class="form-control" id="inputNewPassword" placeholder="Password">
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="text" class="form-control" id="inputRepeatPassword" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
</section>