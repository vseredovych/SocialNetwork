<div class="wrapper">
    <div class="sidebar">Sidebar</div>
    <div class="content">
        <div>
            @foreach (var el in Model.GetAll())
            {
                <div class="post-container">
                    <p>@(el.AuthorName + ": " + el.Text) </p>
                    @foreach (var cmt in el.Comments)
                    {
                        <p>@(cmt.AuthorName + ": " + cmt.Text) </p>
                    }

                    <span class="post-time-right"> @(el.Timestamp)</span>
                </div>
            }
        </div>
    </div>
</div>



